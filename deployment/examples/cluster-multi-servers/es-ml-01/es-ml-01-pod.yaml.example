apiVersion: v1
kind: Pod
metadata:
  labels:
    app: es-ml-01-pod
  name: es-ml-01-pod
  annotations:
    seccomp.security.alpha.kubernetes.io/pod: localhost/default.json
spec:
  restartPolicy: OnFailure
  hostNetwork: true
  containers:
  - name: es-ml-01
    image: localhost/extra2000/elastic/elasticsearch
    securityContext:
      allowPrivilegeEscalation: false
      privileged: false
      capabilities:
        add: []
        drop:
        - CAP_MKNOD
        - CAP_NET_RAW
        - CAP_AUDIT_WRITE
      seLinuxOptions:
        type: es_ml_01_pod_es_ml_01.process
    resources:
      requests:
        memory: 1000Mi
        cpu: 1000m
      limits:
        memory: 1000Mi
        cpu: 1000m
    env:
    - name: ES_JAVA_OPTS
      valueFrom:
        configMapKeyRef:
          name: es-ml-01-configmap
          key: env_java_opts
    volumeMounts:
    - mountPath: /usr/share/elasticsearch/config
      name: es-ml-01-config
    - mountPath: /usr/share/elasticsearch/config/elasticsearch.yml
      name: es-ml-01-yml
      readOnly: true
    - mountPath: /usr/share/elasticsearch/config/elastic-transport.p12
      name: es-ml-01-ssl-transport
      readOnly: true
    - mountPath: /usr/share/elasticsearch/config/elastic-http.p12
      name: es-ml-01-ssl-http
      readOnly: true
    - mountPath: /usr/share/elasticsearch/data
      name: es-ml-01-data
  volumes:
  - name: es-ml-01-yml
    hostPath:
      path: ./configs/es-ml-01.yml
  - name: es-ml-01-ssl-transport
    hostPath:
      path: ./secrets/certificate-bundle/es-ml-01/es-ml-01.p12
  - name: es-ml-01-ssl-http
    hostPath:
      path: ./secrets/elasticsearch-ssl-http/elasticsearch/http.p12
  - name: es-ml-01-config
    persistentVolumeClaim:
      claimName: es-ml-01-config
  - name: es-ml-01-data
    persistentVolumeClaim:
      claimName: es-ml-01-data
