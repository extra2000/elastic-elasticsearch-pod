apiVersion: v1
kind: Pod
metadata:
  labels:
    app: es-hot-01-pod
  name: es-hot-01-pod
  annotations:
    seccomp.security.alpha.kubernetes.io/pod: localhost/default.json
spec:
  restartPolicy: OnFailure
  hostNetwork: true
  containers:
  - name: es-hot-01
    image: localhost/extra2000/elastic/elasticsearch
    securityContext:
      allowPrivilegeEscalation: false
      privileged: false
      capabilities:
        add: []
        drop:
        - CAP_MKNOD
        - CAP_NET_RAW
        - CAP_AUDIT_WRITE
      seLinuxOptions:
        type: es_hot_01_pod_es_hot_01.process
    resources:
      requests:
        memory: 1000Mi
        cpu: 1000m
      limits:
        memory: 1000Mi
        cpu: 1000m
    env:
    - name: ES_JAVA_OPTS
      valueFrom:
        configMapKeyRef:
          name: es-hot-01-configmap
          key: env_java_opts
    volumeMounts:
    - mountPath: /usr/share/elasticsearch/config/elasticsearch.yml
      name: es-hot-01-yml
      readOnly: true
    - mountPath: /usr/share/elasticsearch/config/elastic-transport.p12
      name: es-hot-01-ssl-transport
      readOnly: true
    - mountPath: /usr/share/elasticsearch/config/elastic-http.p12
      name: es-hot-01-ssl-http
      readOnly: true
    - mountPath: /usr/share/elasticsearch/config/elasticsearch.keystore
      name: es-hot-01-keystore
      readOnly: true
    - mountPath: /usr/share/elasticsearch/data
      name: es-hot-01-data
  volumes:
  - name: es-hot-01-yml
    hostPath:
      path: ./configs/es-hot-01.yml
  - name: es-hot-01-ssl-transport
    hostPath:
      path: ./secrets/certificate-bundle/es-hot-01/es-hot-01.p12
  - name: es-hot-01-ssl-http
    hostPath:
      path: ./secrets/elasticsearch-ssl-http/elasticsearch/http.p12
  - name: es-hot-01-keystore
    hostPath:
      path: ./secrets/es-hot-01.keystore
  - name: es-hot-01-data
    persistentVolumeClaim:
      claimName: es-hot-01-data
