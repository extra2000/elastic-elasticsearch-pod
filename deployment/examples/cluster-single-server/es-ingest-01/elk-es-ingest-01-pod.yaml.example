apiVersion: v1
kind: Pod
metadata:
  labels:
    app: elk-es-ingest-01-pod
  name: elk-es-ingest-01-pod
  annotations:
    seccomp.security.alpha.kubernetes.io/pod: localhost/default.json
spec:
  restartPolicy: OnFailure
  hostNetwork: false
  containers:
  - name: es-ingest-01
    image: localhost/extra2000/elastic/elasticsearch
    securityContext:
      allowPrivilegeEscalation: false
      privileged: false
      capabilities:
        add: []
        drop:
        - CAP_MKNOD
        - CAP_NET_RAW
        - CAP_AUDIT_WRITE
      seLinuxOptions:
        type: elk_es_ingest_01_pod_es_ingest_01.process
    resources:
      requests:
        memory: 1000Mi
        cpu: 1000m
      limits:
        memory: 1000Mi
        cpu: 1000m
    ports:
    - containerPort: 9200
      hostPort: 9211
      hostIP: 0.0.0.0
      protocol: tcp
    - containerPort: 9300
      hostPort: 9311
      hostIP: 0.0.0.0
      protocol: tcp
    env:
    - name: ES_JAVA_OPTS
      valueFrom:
        configMapKeyRef:
          name: es-ingest-01-configmap
          key: env_java_opts
    volumeMounts:
    - mountPath: /usr/share/elasticsearch/config/elasticsearch.yml
      name: es-ingest-01-yml
      readOnly: true
    - mountPath: /usr/share/elasticsearch/config/elastic-transport.p12
      name: es-ingest-01-ssl-transport
      readOnly: true
    - mountPath: /usr/share/elasticsearch/config/elastic-http.p12
      name: es-ingest-01-ssl-http
      readOnly: true
    - mountPath: /usr/share/elasticsearch/config/elasticsearch.keystore
      name: es-ingest-01-keystore
      readOnly: true
    - mountPath: /usr/share/elasticsearch/data
      name: es-ingest-01-data
  volumes:
  - name: es-ingest-01-yml
    hostPath:
      path: ./configs/es-ingest-01.yml
  - name: es-ingest-01-ssl-transport
    hostPath:
      path: ./secrets/certificate-bundle/es-ingest-01/es-ingest-01.p12
  - name: es-ingest-01-ssl-http
    hostPath:
      path: ./secrets/elasticsearch-ssl-http/elasticsearch/http.p12
  - name: es-ingest-01-keystore
    hostPath:
      path: ./secrets/es-ingest-01.keystore
  - name: es-ingest-01-data
    persistentVolumeClaim:
      claimName: elk-es-ingest-01-data
